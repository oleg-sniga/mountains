extends ../template

block variables
    - var title = "Welkome!"

block content
    .wrapper.welkome--fon
        main.main
            .welkome
                .welkome__cont
                    .welkome__img
                        .welkome__pic
                            img.welkome__ava(src="images/img/avatar2.jpg")
                    h1 Олег Снига
                    p Личный сайт веб разработчика
                    ul.socials
                        li.socials__items
                            a.socials__link(href="#")
                                svg.socials__svg(width="35" height="25")
                                    use(xlink:href="images/sprites/symbol/sprite.svg#vk")
                        li.socials__items
                            a.socials__link(href="#")
                                svg.socials__svg(width="35" height="25")
                                    use(xlink:href="images/sprites/symbol/sprite.svg#github")
                        li.socials__items
                            a.socials__link(href="#")
                                svg.socials__svg(width="35" height="25")
                                    use(xlink:href="images/sprites/symbol/sprite.svg#in")
                ul.menu
                    li.menu__items
                        a.menu__link(href="works.html") Мои работы
                    li.menu__items
                        a.menu__link(href="about.html") Обо мне
                    li.menu__items
                        a.menu__link(href="blog.html") Блог

            .welkome
                .authorization
                    h2.sub-title.sub-title--authorization Авторизуйтесь
                    form.authorization__form(action="entry.php",method="post")
                        .authorization__column
                            label.authorization__label
                                .authorization__img
                                    svg.authorization__svg(width="18",height="18")
                                        use(xlink:href="images/sprites/symbol/sprite.svg#login")
                                input.authorization__input(type="text",name="login",placeholder="Логин")
                        .authorization__column
                            label.authorization__label
                                .authorization__img
                                    svg.authorization__svg(width="18",height="18")
                                        use(xlink:href="images/sprites/symbol/sprite.svg#password")
                                input.authorization__input(type="password",name="pass",placeholder="Пароль")
                        .authorization__column
                            label.authorization__label(for="author-check")
                                input.authorization__checkbox(type="checkbox",name="captcha1",id="author-check",value="yes",checked="checked")
                                span.authorization__fake-check
                                    svg.authorization__fake-check__svg(width="10",height="10")
                                        use(xlink:href="images/sprites/symbol/sprite.svg#check")
                                span.authorization__title Я человек
                        .authorization__column.authorization__checkbox-title Вы точно не робот?
                        .authorization__column.authorization__column--radio
                            label.authorization__label(for="radio-yes")
                                input.authorization__radio(type="radio",name="captcha2",id="radio-yes",value="yes",checked="checked")
                                span.authorization__fake-radio
                                span.authorization__title Да
                            label.authorization__label(for="radio-no")
                                input.authorization__radio(type="radio",name="captcha2",id="radio-no",value="no")
                                span.authorization__fake-radio
                                span.authorization__title Не уверен
                        .authorization__column
                                a.authorization__btn(href="index.html") На главную
                                input.authorization__btn(type="reset",value="Войти")
                

            button.login-btn Авторизоваться
